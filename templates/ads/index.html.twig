{% extends 'base.html.twig' %}

{% block title %}Index{% endblock %}

{% block body %}
    <h1 class="text-center mb-3">Adverts List</h1>
    {% for ad in ads %}
        <div class="row">
            <div class="col-12 text-center">
                <a href="{{ path('ads_show', {'id': ad.id}) }}">
                    <h5>{{ ad.title }}</h5>
                </a>
            </div>
            <div class="col-3 singleAd">
                <p><i>{{ ad.user.username }}</i></p>
                <p><i>{{ ad.date ? ad.date|date('Y-m-d H:i:s') : '' }}</i></p>
            </div>
            <div class="col-9 singleAd">
                <p>{{ ad.description }}</p>
            </div>
        </div>
        <div class="row justify-content-end mt-1">
            <a class="btn-sm btn-warning mr-1" href="{{ path('ads_edit', {'id': ad.id}) }}">edit</a>
            {{ include('ads/_delete_form.html.twig') }}
        </div>
    {% else %}
        <p>no records found</p>
    {% endfor %}
{% endblock %}