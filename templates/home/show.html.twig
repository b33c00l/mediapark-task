{% extends 'base.html.twig' %}

{% block title %}Single Add{% endblock %}

{% block body %}
    <h1 class="text-center">{{ ad.title }}</h1>

    <table class="table singleAd">
        <tbody>
        <tr>
            <th>Posted by</th>
            <td>{{ ad.user.username }}</td>
        </tr>
        <tr>
            <th>Date</th>
            <td>{{ ad.date ? ad.date|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ ad.description }}</td>
        </tr>

        </tbody>
    </table>

    <a href="{{ path('home') }}">back to list</a>

{% endblock %}